{
    "openrpc": "1.0.0-rc1",
    "info": {
        "version": "1.0.0",
        "title": "OpenRPC Petstore",
        "license": {
            "name": "MIT"
        }
    },
    "servers": [
        {
            "url": "http://localhost:8080"
        }
    ],
    "methods": [
        {
            "name": "list_pets",
            "summary": "List all pets",
            "paramStructure": "by-name",
            "tags": [
                {
                    "name": "pets"
                }
            ],
            "params": [
                {
                    "name": "limit",
                    "description": "How many items to return at one time (max 100)",
                    "required": false,
                    "schema": {
                        "type": "integer",
                        "format": "int32"
                    }
                }
            ],
            "result": {
                "name": "pets",
                "description": "A paged array of pets",
                "schema": {
                    "$ref": "#/components/schemas/Pets"
                }
            }
        },
        {
            "name": "create_pet",
            "summary": "Create a pet",
            "paramStructure": "by-name",
            "tags": [
                {
                    "name": "pets"
                }
            ],
            "params": [],
            "result": {
                "name": "null",
                "description": "Null response"
            }
        },
        {
            "name": "get_pet",
            "summary": "Info for a specific pet",
            "tags": [
                {
                    "name": "pets"
                }
            ],
            "paramStructure": "by-position",
            "params": [
                {
                    "name": "petId",
                    "required": true,
                    "description": "The id of the pet to retrieve",
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "result": {
                "name": "pets",
                "description": "Expected response to a valid request",
                "schema": {
                    "$ref": "#/components/schemas/Pets"
                }
            }
        }
    ],
    "components": {
        "schemas": {
            "Pet": {
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "name": {
                        "type": "string"
                    },
                    "tag": {
                        "type": "string"
                    }
                }
            },
            "Pets": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/Pet"
                }
            }
        }
    }
}
